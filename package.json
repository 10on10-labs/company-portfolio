{
  "name": "company-portfolio",
  "private": true,
  "scripts": {
    "analyze": "cd apps/web && cross-env ANALYZE=true pnpm build",
    "analyze:web": "cd apps/web && cross-env ANALYZE=true pnpm build",
    "analyze:windows": "cd apps/web && set ANALYZE=true && pnpm build",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@company/web",
    "build:studio": "turbo run build --filter=@company/studio",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@company/web",
    "dev:studio": "turbo run dev --filter=@company/studio",
    "format": "npx prettier --write . --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "lint": "turbo run lint",
    "lint:fix": "pnpm run format && turbo run lint -- --fix",
    "start": "turbo run start",
    "start:web": "turbo run start --filter=@company/web",
    "start:studio": "turbo run start --filter=@company/studio",
    "deploy:studio": "cd apps/studio && pnpm sanity deploy",
    "typecheck": "turbo run typecheck",
    "typegen": "cd apps/studio  && pnpm run typegen",
    "prepare": "husky"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.4.1",
    "husky": "^9.1.7",
    "prettier": "3.5.3",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677"
}
