{
  "name": "company-portfolio",
  "description": "Company portfolio to showcase company profile and projects",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:web": "npm run dev --workspace=web",
    "dev:studio": "npm run dev --workspace=studio",
    "import-sample-data": "cd studio && sanity dataset import sample-data.tar.gz --replace",
    "prepare": "husky",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./web",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ./web",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache"
  },
  "keywords": [
    "Sanity",
    "Next.js",
    "Headless CMS",
    "Visual Editing",
    "Live Content API (LCAPI)",
    "Real-time"
  ],
  "bugs": {
    "url": "https://github.com/sanity-io/sanity-template-nextjs-clean/issues"
  },
  "homepage": "https://github.com/sanity-io/sanity-template-nextjs-clean#readme",
  "workspaces": [
    "studio",
    "web"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5"
  }
}
